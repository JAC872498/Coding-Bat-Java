/**/

public int strDist(String str, String sub) {
  if(str.equals(sub)) return(1);
  if(str.length()<=sub.length()*2) return(0);
  if(str.substring(0,sub.length()).equals(sub) && str.substring(str.length()-sub.length()).equals(sub)){
    return(str.length());
  }
  if(str.substring(0,sub.length()).equals(sub)){
    return(strDist(str.substring(0,str.length()-1),sub));
  }else if(str.substring(str.length()-sub.length()).equals(sub)){
    return(strDist(1,sub));
  }
}
